{
  "name": "@elevationteam/utils",
  "version": "0.2.6",
  "description": "A collection of reusable utility functions and helpers for web, backend, and mobile applications, designed to simplify common development tasks.",
  "author": "hijuliancode (https://github.com/hijuliancode)",
  "license": "ISC",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./math": {
      "import": "./dist/math/index.js",
      "require": "./dist/math/index.js"
    },
    "./text": {
      "import": "./dist/text/index.js",
      "require": "./dist/text/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "build:watch": "npm run clean && tsc --watch",
    "test": "jest",
    "prepare": "husky",
    "commit": "cz",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "elevationteam",
    "utils"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hijuliancode/elevationteam-utils.git"
  },
  "bugs": {
    "url": "https://github.com/hijuliancode/elevationteam-utils/issues"
  },
  "homepage": "https://github.com/hijuliancode/elevationteam-utils",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "semantic-release": "^24.1.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "/**/*.test.ts"
    ]
  },
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}